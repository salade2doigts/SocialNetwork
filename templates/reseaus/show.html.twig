{% extends 'base.html.twig' %}


{% block body %}
    <article class="mt-5">
        <div class="news card">
            <img class="card-img-top" src="{{ '/files/' ~ post.imgFileName }}" alt="Card image cap">
            <div class="container text-center">
                <p class="lead">Post</p>
            </div>
            <h2 class="card-title dateArt metadata">
                <em>le {{ post.createdAt | date('d/m/Y') }} à {{ post.createdAt | date('H:i') }}
                    cercle <strong class="badge badge-pill badge-primary">{{ post.category.title }}</strong></em>
            </h2>
            {%  for tag in post.tags %}
                <p class="badge badge-primary w-25">#{{ tag }}</p><br>
                {% endfor %}
            <p class="card-text">
                {{ post.content | raw }}
            </p>
        </div>


    </article>

    <section id="commentaires">
        {{ form_start(formComment) }}
        {{ form_row(formComment.content, {'attr': {'placeholder': "Exprimez vous"}}) }}

        <button type="submit" class="btn btn-success mb-5">
            Ajouter le commentaire
        </button>
        {{ form_end(formComment) }}

        {% for comment in post.comments %}
            <div class="comment w-50 border rounded bg-info text-white">
                <div class="row">
                    <div class="col-3">
                        <span class="badge-light text-black" >{{ comment.user.alias }}</span>
                        <small>{{ comment.createdAt | date('d/m/Y à H:i') }}</small>

                    </div>
                    <div class="col">
                        {{ comment.content | raw }}
                    </div>
                </div>
            </div>

        {% endfor %}


    </section>
{% endblock %}
{% extends 'base.html.twig' %}


{% block body %}
    <article class="mt-5">
        <div class="news card">
            <img class="card-img-top" src="{{ '/files/' ~ post.imgFileName }}" alt="Card image cap">
            <div class="container text-center">
                <p class="lead">Post</p>
            </div>
            <h2 class="card-title dateArt metadata">
                <em>le {{ post.createdAt | date('d/m/Y') }} à {{ post.createdAt | date('H:i') }}
                    cercle {{ post.category.title }}</em>
            </h2>

            <p class="card-text">
                {{ post.content | raw }}
            </p>
        </div>


    </article>

    <section id="commentaires">
        {{ form_start(formComment) }}
        {{ form_row(formComment.content, {'attr': {'placeholder': "Exprimez vous"}}) }}

        <button type="submit" class="btn btn-success">
            Ajouter le commentaire
        </button>
        {{ form_end(formComment) }}

        {% for comment in post.comments %}
            <div class="comment card w-50">
                <div class="row">
                    <div class="col-3">
                        {{ comment.user.alias }}
                        <small>{{ comment.createdAt | date('d/m/Y à H:i') }}</small>

                    </div>
                    <div class="col">
                        {{ comment.content | raw }}
                    </div>
                </div>
            </div>

        {% endfor %}


    </section>
{% endblock %}
{% extends 'base.html.twig' %}


{% block body %}
 <article>
        <div class="news card">
            <img class="card-img-top" src="{{ post.image}}" alt="Card image cap">
            <div class="container text-center">
                <h2> {{ post.title }}</h2>
                <p class="lead">Post</p>
            </div>
            <h2 class="card-title dateArt metadata">
            <em>le {{ post.createdAt | date('d/m/Y') }} Ã  {{ post.createdAt | date('H:i') }}</em>
            </h2>
        
            <p class="card-text">
                {{ post.content | raw}}
            </p> 
        </div> 
    </article>
{% endblock %}